{
  "name": "stint",
  "version": "0.0.1",
  "private": true,
  "lint-staged": {
    "*.js": [
      "yarn pretty",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged && yarn test",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "clean": "watchman watch-del-all && rm -rf node_modules/ && yarn cache clean && yarn install && yarn start -- --reset-cache",
    "pretty": "prettier — single-quote — trailing-comma all — write \"src/**/*.js\"",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "flow": "flow",
    "flow-stop": "flow stop"
  },
  "dependencies": {
    "babel-preset-flow": "^6.23.0",
    "formik": "^1.3.1",
    "native-base": "^2.8.1",
    "react": "16.5.0",
    "react-native": "0.57.2",
    "react-native-formik": "^1.5.5",
    "react-native-localization": "^2.0.1",
    "react-native-vector-icons": "^6.0.2",
    "react-navigation": "^2.17.0",
    "schedule": "0.4.0",
    "yup": "^0.26.6"
  },
  "devDependencies": {
    "eslint-plugin-import": "2.14.0",
    "@babel/core": "^7.1.2",
    "@babel/runtime": "^7.1.2",
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.3.0",
    "flow-bin": "0.82.0",
    "husky": "^1.1.1",
    "jest": "23.6.0",
    "lint-staged": "^7.3.0",
    "metro-react-native-babel-preset": "0.48.0",
    "prettier": "^1.14.3",
    "react-dom": "^16.5.2",
    "react-test-renderer": "16.5.0"
  },
  "rnpm": {
    "assets": [
      "./src/assets/fonts/"
    ]
  },
  "jest": {
    "preset": "react-native",
    "cacheDirectory": "./cache",
    "coveragePathIgnorePatterns": [
      "./app/utils/vendor"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80
      }
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!native-base)/"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  }
}
